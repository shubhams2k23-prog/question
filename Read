  <div class="card" id="card">
    <h2>Hey ðŸ‘‹</h2>
    <p>
      Honest questionâ€¦<br><br>
      <b>I am annoying, right?</b> ðŸ˜Œ<br>
      <small>(Be honest. I can take it.)</small>
    </p>

    <button class="yes" onclick="yesClick()">ðŸ˜„ Yes</button>
    <button class="no" id="noBtn">ðŸ™ƒ No</button>

    <div id="message"></div>
  </div>

  <script>
    const noBtn = document.getElementById("noBtn");
    const card = document.getElementById("card");

    // Move the "No" button randomly
    function moveButton() {
      const cardRect = card.getBoundingClientRect();
      const btnRect = noBtn.getBoundingClientRect();

      const maxX = cardRect.width - btnRect.width - 10;
      const maxY = cardRect.height - btnRect.height - 10;

      const x = Math.random() * maxX;
      const y = Math.random() * maxY;

      noBtn.style.left = x + "px";
      noBtn.style.top = y + "px";
    }

    // Desktop hover
    noBtn.addEventListener("mouseover", moveButton);

    // Mobile touch
    noBtn.addEventListener("touchstart", function (e) {
      e.preventDefault();
      moveButton();
    });

    // Backup click (touch may register as click)
    noBtn.addEventListener("click", function (e) {
      e.preventDefault();
      moveButton();
    });

    // Yes button click
    function yesClick() {
      // Add depressing style
      document.body.classList.add("depressing");

      // Show depressing line
      document.getElementById("message").innerHTML =
        "Makes sense.<br>Iâ€™d probably annoy myself too.";
    }
  </script>
